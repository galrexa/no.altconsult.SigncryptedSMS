<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_height="fill_parent" android:layout_width="wrap_content" android:orientation="vertical">
        <ImageView android:src="@drawable/icon" android:id="@+id/icon_thread_contact" android:paddingRight="10dip" android:layout_height="fill_parent" android:layout_width="fill_parent"></ImageView>
    </LinearLayout>
    <RelativeLayout android:layout_height="fill_parent" android:id="@+id/relativeLayout1" android:layout_width="fill_parent">
        <TextView android:layout_height="wrap_content" android:textSize="20sp" android:id="@+id/textView_thread_row_displayname" android:layout_width="fill_parent"></TextView>
        <TextView android:gravity="left" android:paddingLeft="30dip" android:id="@+id/textView_thread_display_number" android:textSize="14sp" android:layout_height="wrap_content" android:layout_below="@+id/textView_thread_row_displayname" android:layout_alignLeft="@+id/textView_thread_row_displayname" android:layout_alignRight="@+id/textView_thread_row_displayname" android:layout_width="fill_parent"></TextView>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/textView_thread_display_number" android:id="@+id/linearLayout2" android:layout_alignLeft="@+id/textView_thread_display_number" android:layout_alignRight="@+id/textView_thread_display_number" android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:id="@+id/textView_thread_message_teaser" android:gravity="left" android:layout_height="fill_parent"></TextView>
            <TextView android:textSize="14sp" android:layout_height="wrap_content" android:paddingRight="20dip" android:paddingLeft="80dip" android:id="@+id/textView_thread_time" android:gravity="right|top" android:layout_width="fill_parent"></TextView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>